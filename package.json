{
  "name": "besync-cli",
  "version": "1.0.1",
  "description": "Two-way file synchronization utility over SSH with local cache",
  "main": "dist/index.js",
  "bin": {
    "besync": "./dist/index.js"
  },
  "keywords": [
    "ssh",
    "rsync",
    "sync",
    "synchronization",
    "files",
    "configuration",
    "deployment"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mfursov/besync.git"
  },
  "bugs": {
    "url": "https://github.com/mfursov/besync/issues"
  },
  "homepage": "https://github.com/mfursov/besync#readme",
  "scripts": {
    "build": "tsc && chmod +x dist/index.js && sed -i '1s|^.*$|#!/usr/bin/env node|' dist/index.js",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^25.0.0",
    "typescript": "^5.6.3",
    "eslint": "^9.3.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0"
  }
}
